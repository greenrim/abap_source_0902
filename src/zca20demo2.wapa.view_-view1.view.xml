<mvc:View controllerName="sync.zca20demo2.controller.View1"                                                                                                                                                                                                    
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"                                                                                                                                                                                                            
    xmlns="sap.m"                                                                                                                                                                                                                                              
    xmlns:core="sap.ui.core"                                                                                                                                                                                                                                   
    >                                                                                                                                                                                                                                                          
    <Page id="page" title="{i18n>title}">                                                                                                                                                                                                                      
        <content>                                                                                                                                                                                                                                              
            <Label text="Team No."></Label>                                                                                                                                                                                                                    
            <ComboBox id="idComTeam" items="{/scarrSet}" selectionChange="onSelectChange">                                                                                                                                                                     
                <items>                                                                                                                                                                                                                                        
                    <core:Item key="{Carrid}" text="{Carrname}"> </core:Item>                                                                                                                                                                                  
                </items>                                                                                                                                                                                                                                       
            </ComboBox>                                                                                                                                                                                                                                        
        </content>                                                                                                                                                                                                                                             
    </Page>                                                                                                                                                                                                                                                    
</mvc:View>                                                                                                                                                                                                                                                    
                                                                                                                                                                                                                                                               