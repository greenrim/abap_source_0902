FORM set_init .

  pa_car = 'AA'.
  pa_con = '0017'.

  CLEAR so_dat.
  so_dat-sign = 'I'.  "INCLUDE의 약자
  so_dat-option = 'EQ'. "EQ는 동일한거, BT는 BETWEEN의 약자
  so_dat-low = sy-datum - 365.
  so_dat-high = sy-datum.

  APPEND so_dat TO so_dat[].
  APPEND so_dat TO so_dat.
  APPEND so_dat.

  CLEAR so_dat.

ENDFORM.
